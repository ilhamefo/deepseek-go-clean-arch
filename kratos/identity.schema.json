{
  "$id": "https://schemas.localhost/kratos/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "type": "string",
              "minLength": 1
            },
            "last": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "first",
            "last"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "traits"
  ],
  "additionalProperties": false
}
